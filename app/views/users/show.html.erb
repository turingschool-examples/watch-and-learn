<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <button class = "btn btn-primary mb1 bg-teal"><%= link_to "Connect to GitHub",
"/auth/github" %></button>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>

  <section>
    <h1>Bookmarked Segments</h1>
  </section>

  <section class="github">
    <h1>GitHub</h1>

  <h3>GitHub Repos</h3>
  <% if !@repos.nil? %>
    <section class="repos">
      <% @repos.each do |repo| %>
        <ul class="repo">
        <%= link_to repo.name, "https://www.github.com/#{repo.full_name}" %>
        </ul>
      <%end%>
    </section>
  <%end%>

  <h3>Followers</h3>
    <section class="followers">
      <% if @followers.nil? %>
        <p>You have no followers.</p>
      <% else %>
        <% @followers.each do |follower| %>
          <ul class="follower">
          <%= link_to follower.login, "https://www.github.com/#{follower.login}" %>
          </ul>
        <%end%>
    </section>
  <%end%>

  <h3>Following</h3>
    <section class="followings">
      <% if @followings.nil?%>
        <p>You are not following any accounts.</p>
      <% else %>
        <% @followings.each do |following| %>
          <ul class="following">
          <%= link_to following.login, "https://www.github.com/#{following.login}" %>
          </ul>
      <%end%>
    </section>
  <%end%>
</section>
