<h2>New Playlist</h2>

<%= form_for [:admin, @tutorial] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "block col-4 field" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "block col-4 field"  %>
  <%= f.label :thumbnail %>
  <%= f.text_field :thumbnail, class: "block col-4 field"  %>
  <%= f.label :playlist_id %>
  <%= f.text_field :playlist_id %>
  <%= f.submit "Create Playlist", class: "mt2 btn btn-primary mb1 bg-teal"  %>
<% end %>
